# Nginx Configuration for Futsal Neo S
# Location: /etc/nginx/sites-available/futsal
# This file is auto-generated by setup-vps.sh
# Update yourdomain.com with your actual domain

upstream futsal_backend {
    # PHP-FPM unix socket
    server unix:/run/php/php8.2-futsal.sock;
    
    # Or use TCP connection if preferred
    # server 127.0.0.1:9000;
}

# Rate limiting zones
limit_req_zone $binary_remote_addr zone=login:10m rate=5r/m;
limit_req_zone $binary_remote_addr zone=api:10m rate=100r/m;

# Redirect HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name yourdomain.com www.yourdomain.com;
    
    # Allow Let's Encrypt verification
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    
    # Redirect everything else to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# Main HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    
    server_name yourdomain.com www.yourdomain.com;
    
    # Document root
    root /home/deploy/projects/futsal/current/public;
    index index.php index.html;
    
    # SSL Certificates (Let's Encrypt)
    ssl_certificate /etc/letsencrypt/live/yourdomain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/yourdomain.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/yourdomain.com/chain.pem;
    
    # SSL Configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5:!CAMELLIA:!IDEA:!PSK:!SRP:!KRB5:!aNULL:!eNULL:!EXPORT:!DES:!RC4:!3DES:!DH:!aECDH:!ADH:!AECDH:!MD5:!DSS:!SRP:!CAB128:!PSK:!KRB5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;
    ssl_stapling on;
    ssl_stapling_verify on;
    
    # Security Headers
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';" always;
    
    # Logging
    access_log /var/log/nginx/futsal_access.log combined buffer=32k flush=5s;
    error_log /var/log/nginx/futsal_error.log warn;
    
    # Gzip Compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript 
               application/json application/javascript application/xml+rss 
               application/rss+xml font/truetype font/opentype 
               application/vnd.ms-fontobject image/svg+xml;
    gzip_buffers 16 8k;
    gzip_disable "msie6";
    
    # Client upload size
    client_max_body_size 100M;
    client_body_buffer_size 128k;
    
    # Timeouts
    fastcgi_connect_timeout 60s;
    fastcgi_send_timeout 300s;
    fastcgi_read_timeout 300s;
    
    # Deny access to sensitive files
    location ~ /\.env {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    location ~ /\.git {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    location ~ /composer\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Health check endpoints
    location ~ ^/(health|health/ready|health/live)$ {
        access_log off;
        fastcgi_pass futsal_backend;
        fastcgi_param SCRIPT_FILENAME $document_root/index.php;
        include fastcgi_params;
    }
    
    # Static files (images, CSS, JS) - cache for 1 year
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|json|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Laravel routing - try file, directory, or route to index.php
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP-FPM Handler
    location ~ \.php$ {
        # Rate limiting for login
        if ($request_uri ~ ^/login) {
            limit_req zone=login burst=5 nodelay;
        }
        
        # Rate limiting for API
        if ($request_uri ~ ^/api) {
            limit_req zone=api burst=20 nodelay;
        }
        
        try_files $uri =404;
        
        fastcgi_pass futsal_backend;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        
        include fastcgi_params;
        
        # Additional FastCGI parameters
        fastcgi_param PHP_VALUE "upload_max_filesize=100M \n post_max_size=100M";
        fastcgi_buffering off;
        fastcgi_request_buffering off;
        fastcgi_buffer_size 4k;
        fastcgi_buffers 8 4k;
        fastcgi_busy_buffers_size 8k;
    }
    
    # Deny access to specific directories
    location ~ ^/(storage|bootstrap|database|resources|config|vendor|logs)/ {
        deny all;
        access_log off;
        log_not_found off;
    }
}

# Status page for monitoring
server {
    listen 127.0.0.1:8080;
    location /nginx_status {
        stub_status;
        access_log off;
        allow 127.0.0.1;
        deny all;
    }
}
